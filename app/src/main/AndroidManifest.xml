<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iscte.zoozone">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_final_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_final_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.iscte.zoozone.Main2Activity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.iscte.zoozone.SelectLanguage" />
        <activity
            android:name="com.iscte.zoozone.ZoneInfo"
            android:parentActivityName="com.iscte.zoozone.Main2Activity" />
        <activity
            android:name="com.iscte.zoozone.NewsRV"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.iscte.zoozone.NewsView"
            android:parentActivityName="com.iscte.zoozone.NewsRV">
        </activity>
    </application>

</manifest>